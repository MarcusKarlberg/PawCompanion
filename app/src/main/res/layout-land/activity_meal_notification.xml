<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcu.pawcompanion.activity.MealNotificationActivity">

    <com.example.marcu.pawcompanion.component.ImageViewComponent
        android:id="@+id/imageView_walk_notification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/reminderButton_meal_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toEndOf="@+id/okButton_meal_notification"
        app:layout_constraintTop_toTopOf="@+id/titleTextView"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Feed Me!"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.marcu.pawcompanion.component.ButtonComponent
        android:id="@+id/reminderButton_meal_notification"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:text="Remind Me Again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.marcu.pawcompanion.component.ButtonComponent
        android:id="@+id/okButton_meal_notification"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="OK"
        app:layout_constraintBottom_toTopOf="@+id/reminderButton_meal_notification"
        app:layout_constraintEnd_toEndOf="@+id/reminderButton_meal_notification"
        app:layout_constraintStart_toStartOf="@+id/reminderButton_meal_notification" />

    <TextView
        android:id="@+id/nameTextView_meal_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="(dogName)"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/portionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Portion: 230g"
        app:layout_constraintEnd_toEndOf="@+id/nameTextView_meal_notification"
        app:layout_constraintStart_toStartOf="@+id/nameTextView_meal_notification"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView_meal_notification" />
</android.support.constraint.ConstraintLayout>
